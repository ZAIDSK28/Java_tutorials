package NQT;

import java.util.Scanner;

public class xyz {
	
	    public static void main (String[] args) {
	      Scanner sc=new Scanner(System.in);
	      System.out.println("Enter initial population followed by Number of days ");
	      int N=sc.nextInt();
	     int X=sc.nextInt();
	    int Pop=N;
	    while(X!=0) {
	    	Pop =3*Pop;
	    	X--;
	    }
	    System.out.println(Pop);
	    
	    
	}

}
